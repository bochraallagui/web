{% extends 'baseFront.html.twig' %}
{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdProduit</th>
                <th>PrixProduit</th>
                <th>TypePaiement</th>
                <th>TypeProduit</th>
                <th>DescriptionProduit</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.idProduit }}</td>
                <td>{{ produit.prixProduit }}</td>
                <td>{{ produit.typePaiement }}</td>
                <td>{{ produit.typeProduit }}</td>
                <td>{{ produit.descriptionProduit }}</td>  
                <td>
                    <a href="{{ path('app_produit_show', {'idProduit': produit.idProduit}) }}">show</a>
                    <a href="{{ path('app_produit_edit', {'idProduit': produit.idProduit}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produit_new') }}">Create new</a>
{% endblock %}
